@using WebSiteBanHang.Models;
@model IEnumerable<WebSiteBanHang.Models.NguoiDung_LoaiNguoiDungModel>
@{
    ViewBag.Title = "QuanLyTaiKhoan";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>QUẢN LÝ TÀI KHOẢN</h2>
@{
    <a href="@Url.Action("ThemTaiKhoan","QuanLyTaiKhoan")"><button type="button" class="btn btn-warning btn-xs" style="float:right;">Thêm Tài Khoản</button></a>

            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Tài Khoản</th>
                                    <th>Mật Khẩu</th>
                                    <th>Loại Tài Khoản</th>
                                    <th> </th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="active">
                                        <td>
                                            @item.NGUOIDUNG.TaiKhoan
                                        </td>
                                        <td>
                                            @item.NGUOIDUNG.MatKhau
                                        </td>
                                        <td>
                                            @item.LOAINGUOIDUNG.TenLoaiNguoiDung
                                        </td>
                                        <td class="center"><a href="@Url.Action("SuaTaiKhoan","QuanLyTaiKhoan",new {@MaNguoiDung = @item.NGUOIDUNG.MaNguoiDung})"><p class="fa fa-pencil-square-o">
                                            Sửa</p></a></td>
                                        <td class="center"><a href="@Url.Action("XoaTaiKhoan","QuanLyTaiKhoan", new {@MaNguoiDung=@item.NGUOIDUNG.MaNguoiDung})">
                                            Xóa</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
}

